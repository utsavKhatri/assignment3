<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
  integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous" />

<body>
  <%- include('../partials/navbar.ejs') %>
    <div class="container d-flex flex-column justify-content-center align-items-center">
      <h1 class="row heading my-5 text-center">Edit Transactions page</h1>

      <div class="row justify-content-center w-75">
        <form action="/editTransaction/<%= data.id  %>" method="post">
          <div class="form-outline mb-4">
            <label class="form-label" for="tran-text">transaction text</label>
            <input type="text" id="tran-text" class="form-control" name="text" value="<%= data.text  %>" required />
          </div>
          <div class="form-outline mb-4">
            <label class="form-label" for="tran-amount">Amount</label><small class="text-muted"> (positive:income,
              negative:expenss)</small>
            <input type="number" id="tran-amount" class="form-control" name="amount" value="<%= data.amount  %>"
              required />
          </div>
          <div class="form-outline mb-4">
            <label class="form-label" for="tran-transfer">Transfer</label>
            <input type="text" id="tran-transfer" class="form-control" name="transfer" value="<%= data.transfer  %>"
              required />
          </div>
          <div class="form-outline mb-4">
            <label class="form-label" for="tran-category">Category</label>
            <input type="text" id="tran-category" class="form-control" name="category" value="<%= data.category  %>"
              required />
          </div>
          <div class="form-outline mb-4">
            <button type="submit" class="btn btn-primary">
              Update transction
            </button>
          </div>
        </form>
      </div>
    </div>

</body>